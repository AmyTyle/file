python
n = 3 
for i in range(n): 
    for j in range(n - i): 
        print(' ', end = '  ') 
    for k in range(i + 1): 
        print('*', end = ' ') 
    for l in range(i): 
        print('*', end = '  ') 
    print() 

for i in range(n - 2, -1, -1): 
    for j in range(n - i): 
        print(' ', end = '  ') 
    for k in range(i + 1): 
        print('*', end = ' ') 
    for l in range(i): 
        print('*', end = '  ') 
    print() 
